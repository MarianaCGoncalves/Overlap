<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/gruName"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:lineSpacingExtra="8sp"
        android:maxLines="1"
        android:text="Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/gruNum"
        android:layout_width="189.5dp"
        android:layout_height="30dp"
        android:layout_below="@+id/gruName"
        android:layout_alignStart="@+id/gruName"
        android:layout_alignLeft="@+id/gruName"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:maxLines="1"
        android:text="Num Members"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gruAct"
        android:layout_width="189.5dp"
        android:layout_height="30dp"
        android:layout_below="@+id/gruName"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_toEndOf="@+id/gruNum"
        android:layout_toRightOf="@+id/gruNum"
        android:maxLines="1"
        android:text="Activity"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gruDesc"
        android:layout_width="379dp"
        android:layout_height="99dp"
        android:layout_below="@+id/gruNum"
        android:layout_alignStart="@+id/gruNum"
        android:layout_alignLeft="@+id/gruNum"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:maxLines="1"
        android:text="Description"
        android:textSize="14sp" />


</RelativeLayout>